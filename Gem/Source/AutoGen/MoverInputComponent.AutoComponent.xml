<?xml version="1.0"?>

<Component
    Name="MoverInputComponent"
    Namespace="xXGameProjectNameXx"
    OverrideComponent="true"
    OverrideController="true"
    OverrideInclude="Source/Components/MoverInputComponent.h"
    Description="Stores and exposes move-related input values, creating network input from them and requesting moves from them."
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- Require the Multiplayer::NetworkCharacterComponent, as we will use this simple component to move our entity. -->
    <ComponentRelation Constraint="Required" HasController="true" Name="NetworkCharacterComponent" Namespace="Multiplayer" Include="Multiplayer/Components/NetworkCharacterComponent.h" />

    <NetworkInput Type="float" Name="MoveForwardAxis" Init="0.f" ExposeToScript="false"></NetworkInput>
    <NetworkInput Type="float" Name="MoveRightAxis" Init="0.f" ExposeToScript="false"></NetworkInput>

</Component>
